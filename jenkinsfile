pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
                    branches: [[name: '*/master']], 
                    doGenerateSubmoduleConfigurations: false, 
                    extensions: [], 
                    submoduleCfg: [], 
                    userRemoteConfigs: [[url: 'https://github.com/momentomori101/time-tracker.git']]])
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
                script{
                def timestamp = new Date().format("yyyyMMdd_HHmmss")
                def version = sh(script: 'echo $VERSION', returnStdout: true).trim()
                def jarName = "GFSP_1-${version}_${timestamp}.war"
                sh "mvn package -Djar.finalName=${jarName}"
                archiveArtifacts artifacts: "target/${jarName}", onlyIfSuccessful: true
                // In this modified code, we use the Date() object to get the current date and time, and format it using the format() method to create a timestamp in the format "yyyyMMdd_HHmmss". Then, we concatenate this timestamp with the version number to create a unique jar file name for each build. Finally, we archive the jar file using the archiveArtifacts step.
                // sh "mvn package -Djar.finalName=${JAR_VERSION}"
                // version = sh (script: 'cat version.txt', returnStdout: true).trim()
                // env.JAR_VERSION = version + "_$BUILD_NUMBER"
                // sh 'mvn package -Djar.finalName=${JAR_VERSION}'
                }
            }
        }
        // stage('Deploy to Nexus') {
        //     steps {
        //         nexusArtifactUploader artifacts: 'target/*.jar',
        //             credentialsId: 'nexus-credentials',
        //             groupId: 'com.example',
        //             nexusUrl: 'https://nexus.example.com/',
        //             nexusVersion: 'nexus3',
        //             repository: 'maven-releases',
        //             version: '1.0-SNAPSHOT'
        //     }
        // }
    }
}
